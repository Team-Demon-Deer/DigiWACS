<Window x:Class="DigiWACS.Client.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:wpf="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
		mc:Ignorable="d"
		Title="DigiWACS" Height="450" Width="800">
	<DockPanel>
		<Menu DockPanel.Dock="Top" VerticalContentAlignment="Stretch">
			<MenuItem Header="_File">
				<MenuItem Header="_Reconnect..." Click="Reconnect_Click">
					<!-- TODO: Some how how the last connection name to reconnect -->
				</MenuItem>
                <MenuItem Header="_New Connection" Click="NewConnection_Click" />
                <MenuItem Header="_Manage Connections" Click="ManageConnections_Click" />
				<Separator />
				<MenuItem Header="_Exit" />
			</MenuItem>
			<MenuItem Header="Test Commands">
				<MenuItem Header="NewWindow" Click="NewWindowButton_OnClick" />
                <MenuItem Header="gRPC Connect" Click="gRPCConnect_OnClick" />
                <MenuItem Header="Test Event" Click="TestEvent_OnClick" />
            </MenuItem>
		</Menu>
		<wpf:MapControl x:Name="MapControl1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
	</DockPanel>
</Window>